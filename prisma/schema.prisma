// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "postgresqlExtensions"]
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [pg_trgm]
}

model User {
  id              Int     @id @default(autoincrement())
  tgId            BigInt  @unique
  tgUsername      String?
  job             String?
  role            String  @default("User")
  requests        Request[]  @relation("SentRequests")
  recievedThanks  ThankYou[] @relation("RecievedThanks")
  fullName       String?
}

model ThankYou {
  id            Int     @id @default(autoincrement())
  recipientId   Int
  recipient     User @relation("RecievedThanks", fields: [recipientId], references: [id])
  creationDate  BigInt
  message       String
}

model Request {
  id          Int     @id @default(autoincrement())
  userId      Int
  fullName    String
  job         String
  user        User    @relation("SentRequests", fields: [userId], references: [id])
  role        String
  isApproved  Boolean   @default(false)
}